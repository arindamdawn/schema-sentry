{
  "name": "schema-sentry",
  "private": true,
  "version": "0.8.0",
  "description": "Type-safe structured data for Next.js App Router, enforced in CI.",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "changeset": "changeset",
    "lint": "pnpm -r lint",
    "release": "pnpm -r build && changeset publish",
    "test": "pnpm -r test",
    "benchmark:200": "pnpm --filter @schemasentry/cli benchmark:200",
    "format": "pnpm -r format",
    "typecheck": "tsc -b --pretty false",
    "typecheck:watch": "tsc -b -w --pretty false",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.5",
    "@vitest/coverage-v8": "^3.2.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
